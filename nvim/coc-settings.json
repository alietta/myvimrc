{
  "signature.target": "float",
  "signature.enable": true,
  "suggest.enablePreview": true,
  "suggest.floatEnable": true,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": " ~  ",
  "diagnostic.errorSign": "◉",
  "diagnostic.warningSign": "◉",
  "diagnostic.infoSign": "◉",
  "diagnostic.hintSign": "◉",
  "diagnostic.messageTarget": "float",

  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  },

  "codeLens.enable": true,
  "codeLens.separator": "  ‣ ",
  "list.indicator": "λ",
  "list.nextKeymap": "<C-k>",
  "list.previousKeymap": "<C-l>",
  "coc.source.file.ignoreHidden": false,

  "coc.preferences.rootPatterns": [
    "tsconfig.json",
    ".projectroot",
    ".vim",
    ".git"
  ],

  "coc.preferences.hoverTarget": "float",
  "coc.preferences.signatureHelpTarget": "float",
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "graphql",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "markdown",
    "rust",
    "python"
  ],

  "suggest.triggerCompletionWait": 100,
  "suggest.completionItemKindLabels": {
    "function": "\uf794",
    "method": "\uf6a6",
    "variable": "\uf71b",
    "constant": "\uf8ff",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\ufa52",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf668",
    "color": "\ue22b",
    "property": "\ufab6",
    "field": "\uf93d",
    "unit": "\uf475",
    "file": "\uf471",
    "value": "\uf8a3",
    "event": "\ufacd",
    "folder": "\uf115",
    "keyword": "\uf893",
    "snippet": "\uf64d",
    "operator": "\uf915",
    "reference": "\uf87a",
    "typeParameter": "\uf278",
    "default": "\uf29c"
  },

  // <<<<<<<< extension/language server specific settings >>>>>>>>

  // <<<< eslint >>>>
  "eslint.autoFix": true,
  "eslint.autoFixOnSave": true,
  "eslint.filetypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // <<<< custom language servers >>>>
  // ref - https://github.com/neoclide/coc.nvim/wiki/Language-servers#register-custom-language-servers
  "languageserver": {
    // https://github.com/mads-hartmann/bash-language-server
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  },

  // <<<< tsserver >>>>
  // ref - https://github.com/neoclide/coc-tsserver#configuration-options
  "tsserver.npm": "/usr/local/bin/npm",

  // <<<< python >>>>
  // ref - https://github.com/neoclide/coc-python#options

  // enables Microsoft PLS
  // ref - https://github.com/neoclide/coc-python#optional-steps
  "python.jediEnabled": false,
  "python.formatting.provider": "black",
  "python.linting.mypyEnabled": true,
  "python.linting.pylintEnabled": false
}
